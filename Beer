#!/usr/bin/env perl

package main;
use Mojolicious::Lite;

app->routes->namespace("Beer");

plugin 'toto' =>
    path => "/app",
    menu => [
        beer => { one => [qw/picture ingredients pubs/],
                  many => [qw/search browse/] },
        brewery => { one => [qw/directions beers info/],
                  many => [qw/phonelist mailing_list/] },
        pub  => { one => [qw/info comments/],
                  many => [qw/search map/] },
    ]
;


get '/' => sub {
  my $self = shift;
  $self->stash(file => __FILE__);
  $self->render('index');
};

app->start;
__DATA__

@@ index.html.ep
% use Mojo::Asset::File;
<!doctype html><html>
  <head>
%= title 'Welcome';
</head>
  <body>
<a href=/app>toto</a>
<hr>
<pre>
%= Mojo::Asset::File->new(path => $file)->slurp;
</pre>
  </body>
</html>
